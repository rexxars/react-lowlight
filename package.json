{
  "name": "react-lowlight",
  "version": "2.0.0",
  "description": "Super-thin React wrapper for lowlight (Syntax highlighting using VDOM)",
  "type": "module",
  "main": "src/Lowlight.js",
  "umd": "umd/Lowlight.min.js",
  "scripts": {
    "build": "rollup -c",
    "lint": "standard",
    "prepublishOnly": "npm test && npm run build",
    "posttest": "npm run lint",
    "test": "mocha --reporter spec",
    "coverage": "nyc npm run test",
    "serve": "vite"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rexxars/react-lowlight.git"
  },
  "keywords": [
    "react",
    "highlight",
    "syntax",
    "lowlight",
    "vdom"
  ],
  "author": "Espen Hovlandsdal <espen@hovlandsdal.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rexxars/react-lowlight/issues"
  },
  "homepage": "https://github.com/rexxars/react-lowlight#readme",
  "peerDependencies": {
    "highlight.js": "^11.0.0",
    "react": ">=0.14.0"
  },
  "dependencies": {
    "lowlight": "^2.4.0",
    "prop-types": "^15.7.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@vitejs/plugin-react": "^1.0.7",
    "chai": "^4.3.4",
    "highlight.js": "^11.3.1",
    "mocha": "^9.1.3",
    "nyc": "^15.1.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rollup": "^2.58.3",
    "standard": "^16.0.4",
    "test-console": "^2.0.0",
    "vite": "^2.6.13"
  },
  "standard": {
    "ignore": [
      "/umd"
    ]
  }
}
