  "dependencies": {
    "lowlight": "^1.0.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "eslint": "^2.4.0",
    "eslint-config-bengler": "^1.0.7",
    "eslint-config-standard": "^5.1.0",
    "eslint-plugin-promise": "^1.1.0",
    "eslint-plugin-standard": "^1.3.2",
    "istanbul": "^0.4.2",
    "mocha": "^2.4.5",
    "react": "^0.14.7",
